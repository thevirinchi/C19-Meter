<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/bodyWhite"
        android:paddingHorizontal="6dp"
        android:minWidth="45dp"
        android:textAlignment="center"
        android:background="@drawable/pills_grad3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--<TextView
        android:id="@+id/sep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sep"
        android:theme="@style/body"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deaths"
        app:layout_constraintBottom_toBottomOf="parent"/>-->

    <TextView
        android:id="@+id/cured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/bodyWhite"
        android:paddingHorizontal="6dp"
        android:minWidth="45dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:background="@drawable/pills_grad2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deaths"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--<TextView
        android:id="@+id/sep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sep"
        android:theme="@style/body"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cured"
        app:layout_constraintBottom_toBottomOf="parent"/>-->

    <TextView
        android:id="@+id/active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/bodyWhite"
        android:paddingHorizontal="6dp"
        android:minWidth="45dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:background="@drawable/pills_grad1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cured"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>