<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainHeading">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">68sp</item>
    </style>

    <style name="heading">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="headingWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="subHeading">
        <item name="android:textColor">#505050</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="subHeadingWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="subTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="body">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="bodyWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="small">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="extra">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="extraWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cabin_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
